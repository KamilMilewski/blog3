<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @project.created_at.strftime("%H:%M %d-%m-%Y") %></p>
		<h1><%= @project.title %></h1>
		<hr>
	</header>

	<div id="content">
		<%= markdown @project.description %>
	</div>

	<br>
	<div class="button_wrapper">
		<a href="<%= @project.link %>" class="project_button" target="_blank">
			Visit <%= @project.title %></a>
	<div>

	<% if user_signed_in? %>
		<div id="admin_links">
			<%= link_to "edit", edit_project_path(@project) %>
			<%= link_to "delete", project_path(@project), method: :delete,
							 	data: {confirm: "Are You sure?"} %>
		</div>
	<% end %>

	<hr>

	<div id="share_box">
		<p>Share this project:</p>
		<a href="#"><i class="fa fa-twitter"></i></a>
		<a href="#"><i class="fa fa-facebook"></i></a>
		<a href="#"><i class="fa fa-google-plus"></i></a>
	</div>
	<hr>
	<%= render 'disqus' %>
</div>